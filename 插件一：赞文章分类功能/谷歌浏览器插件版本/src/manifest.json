{
    "name": "掘金文章分类插件",
    "manifest_version": 2,
    "version": "1.0.0",

    "icons": {
        "48": "img/logo.png"
    },

    "browser_action": {
        "default_icon": "img/logo.png",
        "default_title": "这是一个示例Chrome插件",
        "default_popup": "index.html"
    },

    "content_scripts": [
        {
            "matches": [
                "https://juejin.im/user/*"
            ],
            "js": [
                "js/vue.js",
                "js/element-ui.js",
                "js/axios.js",
                "index.js"
            ],
            "css": [
                "css/element-ui.css",
                "css/index.css"
            ],
            "run_at": "document_end"
        }
    ],

    "permissions": [
        "storage"
    ]
}